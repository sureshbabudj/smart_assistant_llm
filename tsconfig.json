{
  "compilerOptions": {
    "jsx": "react",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "lib": ["esnext"],
    "types": ["node"],
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "frontend",
    "dist",
    "test",
    "tests",
    "coverage",
    "docs"
  ],
  "include": ["src/**/*.ts", "frontend/src/components/*.ts"]
}
